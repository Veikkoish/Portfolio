---
interface ImageItem {
  src: string;
  alt?: string;
  caption?: string;
}

interface Props {
  images: ImageItem[];
  cols?: 2 | 3;
  imageClass?: string;
}

const { images, cols = 2, imageClass = '' } = Astro.props;
const gridClass = cols === 3 ? 'grid-cols-1 md:grid-cols-3' : 'grid-cols-1 md:grid-cols-2';
---

<div class={`grid ${gridClass} gap-4 md:gap-6`}>
  {images.map((img) => (
    <div class="space-y-2">
      <img
        src={img.src}
        alt={img.alt || ''}
        class={`rounded-2xl w-full ${imageClass}`}
      />
      {img.caption && (
        <p class="text-sm text-gray-400 text-center">{img.caption}</p>
      )}
    </div>
  ))}
</div>

